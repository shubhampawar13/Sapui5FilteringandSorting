<mvc:View controllerName="assignment1.controller.UpdateProduct"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    height="100%"
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <App id="updateProduct">
        <Page showHeader="false">
            <form:SimpleForm title="Update Product details here" editable="true" layout="ResponsiveLayout" id="updateproduct_form">
                <Label text="Image URL" />
                <Input placeholder="Enter image URL" id="updateimageUrlInput" name="image" change="onInputChange"/>

                <Label text="Painting Name" />
                <Input placeholder="All characters allowed" id="updatep_name" name="product_name" change="onInputChange"/>

                <Label text="Artist Name" />
                <Input placeholder="Latin characters (case insensitive) and numbers" id="updateartistNameInput" name="artist_name" change="onInputChange"/>

                <Label text="Rating (1 to 5)" />
                <Input placeholder="Enter rating" id="updateratingP" name="rating" change="onInputChange"/>

                <Label text="Price" />
                <Input placeholder="Enter price in numbers" id="updateprice" name="price" change="onInputChange"/>

                <Label text="Height (mm)" />
                <Input placeholder="Enter height in mm" id="updateheight" name="height" change="onInputChange"/>

                <Label text="Depth (mm)" />
                <Input placeholder="Enter depth in mm" id="updatedepth" name="depth" change="onInputChange"/>

                <Label text="Width (mm)" />
                <Input placeholder="Enter width in mm" id="updatewidth" name="width" change="onInputChange"/>

                <Label text="Description" />
                <Input placeholder="Enter product description" id="updatedescriptionInput" name="description" change="onInputChange"/>

                <Button text="Save" press="onSave"/>
            </form:SimpleForm>
        </Page>
    </App>
</mvc:View>
