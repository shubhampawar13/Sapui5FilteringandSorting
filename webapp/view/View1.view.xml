<mvc:View controllerName="assignment1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    	xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content >
         <Table id="idProductsTable"
		inset="false"
        items="{productData>/products}"
        mode="MultiSelect"
        >
		<headerToolbar>
    <OverflowToolbar>
        <content>
            <Title text="Art Gallery" level="H3"/>
            <ToolbarSpacer />
            <Label text="Group By: "/>
            <SegmentedButton id="SB1" selectionChange="onSelectionChange" selectedKey="artist_name"> 
				<items>
					<SegmentedButtonItem id="seg1" text="Artist Name" key="artist_name"/>
					<SegmentedButtonItem id="seg2" text="Price" key="price"/>
					
				</items>
			</SegmentedButton>
            <!-- <Button text="odataDemo" type="Default" press="odataNav" icon="sap-icon://add-product"/> -->
            <Button text="Add Product" type="Default" press="onAddProduct" icon="sap-icon://add-product"/>
            <Button text="Delete Selected Products"  press="onDeleteProduct"  icon="sap-icon://delete" type="Emphasized" />
            <Label text="Filter by:" />
                        <ComboBox id="idArtCategory"
                            placeholder="Select Category"
                            change="onCategoryChanged"
                            >
                            <!-- <core:Item key="{ProductId}" text="{Name}" /> -->
                            <items>
                                <core:Item text="Artist Name" key="artist_name"/>
                                <core:Item text="Price of Painting" key="price"/>
                                <!-- <core:Item text="Watercolors" key="watercolor"/>
                                <core:Item text="Oil Paintings" key="oil"/> -->
                            </items>
                        </ComboBox>
           	<SearchField width="30%" class="sapUiSmallMargin" search=".onSearch" />
            <ToggleButton id="toggleInfoToolbar"
                text="Hide/Show Info Toolbar"
                press="onToggleInfoToolbar" />
        </content>
    </OverflowToolbar>
</headerToolbar>
<infoToolbar>
    <OverflowToolbar>
        <Label text="Explore our wide range of stunning paintings to enhance your space."/>
    </OverflowToolbar>
</infoToolbar>

		<columns>
        <Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{i18n>col1}" />
			</Column>
			
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{i18n>col1}" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>col2}"  />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="{i18n>col3}"  />
			</Column>
			<Column
				hAlign="Center">
				<Text text="{i18n>col4}"  />
			</Column>
            <Column
				width="12em">
				<Text text="{i18n>col5}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle" type="Navigation" press="onPress">
    <cells>
        <Image src="{productData>image}" width="120px" />
        <ObjectIdentifier title="{productData>product_name}" text="{productData>product_id}" />
        <Text text="{productData>artist_name}" />
         <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{= ${productData>rating} * 20 }"  displayValue="{productData>rating} out of 5" showValue="true" state="{productData>state}" />
        <Text text="â‚¹{productData>price}" />
        <Text text="{productData>height} x {productData>depth} x {productData>width} mm" />
         <ObjectNumber number="{WeightMeasure}" unit="{WeightUnit}" state="{ parts: [{path: 'WeightMeasure'}, {path: 'WeightUnit'}], formatter: 'sap.m.sample.Table.Formatter.weightState' }" />
        <ObjectNumber number="{ parts: [{path:'Price'}, {path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }" unit="{CurrencyCode}" />
    </cells>
</ColumnListItem>


			
		</items>
	</Table> 
        </content>
    </Page>
</mvc:View>
